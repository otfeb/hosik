package dbtest;

import java.sql.Connection;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class CRUDTest {
	
	DBConnect db=new DBConnect();
	
	//insert
	public void insert() {
		Scanner sc=new Scanner(System.in);
		
		System.out.println("이름입력");
		String name=sc.nextLine();
		System.out.println("주소입력");
		String addr=sc.nextLine();
		
		String sql="insert into myinfo values(sep1.nextval,'"+name+"','"+addr+"',sysdate)";
		
		//1.db연결
		Connection conn=db.getConnection();
		//2.statement
		Statement stmt=null;
		
		try {
			stmt=conn.createStatement();
			stmt.execute(sql);
			
			System.out.println(sql);
			
			System.out.println("**정보 추가**");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			System.out.println("**insert error: "+e.getMessage());
		}finally {
			db.dbClose(stmt, conn);
			
		}
		
		
	}

	public static void main(String[] args) {
		
		CRUDTest crud=new CRUDTest();
		
		Scanner scanner=new Scanner(System.in);
		int n;
		
		while(true) {
			System.out.println("**Oracle db 연습_myinfo**");
			System.out.println("1.insert 2.select 3.delete 4.update 9.종료");
			
			n=Integer.parseInt(scanner.nextLine());
			
			if(n==1) {
				crud.insert();
			}
			else if(n==9) {
				System.out.println("종료");
				break;
			}
		}

	}

}
