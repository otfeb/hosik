package day0710;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class OracleConnectTest {
	
	static final String URL="jdbc:oracle:thin:@localhost:1521:XE";
	
	public void connectSawon() {
		
		Connection conn=null;	//자바와 오라클 연결
		Statement stmt=null;	//sql문 전달
		ResultSet rs=null;		//출력문을 읽어옴
		
		String sql="select * from sawon order by name";
		
		try {
			conn=DriverManager.getConnection(URL, "angel", "a1234");
			System.out.println("오라클 서버 연결 성공");
			
			stmt=conn.createStatement();
			rs=stmt.executeQuery(sql);
			
			while(rs.next()) {		//true값 반환, 데이터 없으면 false
				//db로부터 데이터 가져오기
				int num=rs.getInt("num");	//컬럼명 or 열번호
				String name=rs.getNString("name");
				String gender=rs.getString("gender");
				String buseo=rs.getString("buseo");
				int pay=rs.getInt("pay");
				
				System.out.println(num+"\t"+name+"\t"+gender+"\t"+buseo+"\t"+pay);
			}finally {
				rs.close();
			}
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			System.out.println("오라클 서버 연결 실패!!"+e.getMessage());
		}
	}
	
	

	public static void main(String[] args) {

	}

}
